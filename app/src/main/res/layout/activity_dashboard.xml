<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EYEPATH"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <TextView
            android:id="@+id/text_profile_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보 조회"
            android:textColor="#0053b3"
            android:padding="8dp"
            android:background="#d0e6ff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eaf2ff"
        android:elevation="4dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:text="📊 사용량"
            android:textColor="#0053b3"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_usage"
            android:textSize="20sp"
            android:textColor="#003c88"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_photo_count"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/button_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보행 보조 시작"
        android:textColor="#ffffff"
        android:backgroundTint="#007bff" />

    <FrameLayout
        android:id="@+id/fragment_container_dashboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
